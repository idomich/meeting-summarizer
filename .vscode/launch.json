    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "/opt/anaconda3/envs/meeting-summarizer/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Transcribe Audio - Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/transcribe_audio.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "/opt/anaconda3/envs/meeting-summarizer/bin/python",
            "args": [
                "Campaign Features - 2025_08_31 15_32 IDT - Recording.mp4",
                "--max-duration",
                "1.0",
                "--description",
                "A talk regarding the issues with the campaign_id feature, between Roei and Ido. Roei is the one doing most of the explaining."
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}